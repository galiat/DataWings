= form_for @hospital do |f|
  - if @hospital.errors.any?
    #error_explanation
      %h2= "#{pluralize(@hospital.errors.count, "error")} prohibited this hospital from being saved:"
      %ul
        - @hospital.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :location
    = f.text_field :location
  .actions
    = f.submit 'Save'
